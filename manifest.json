{
  "manifest_version": 3,
  "name": "CarbaCar Auction Bots",
  "description": "Closed Envelope and Classic last-second bidding bots for business.carbacar.it",
  "version": "1.0.0",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": ["https://business.carbacar.it/*"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html", "default_title": "Auction Bots" },
  "content_scripts": [
    { "matches": ["https://business.carbacar.it/*"], "js": ["content.js"], "run_at": "document_start" }
  ],
  "web_accessible_resources": [
    { "resources": ["page_bridge.js"], "matches": ["https://business.carbacar.it/*"] }
  ]
}
